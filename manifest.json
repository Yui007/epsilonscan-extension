{
  "manifest_version": 3,
  "name": "Epsilon Scan Downloader",
  "version": "3.0",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://*.epsilonscan.to/*"
  ],
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/icon16.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.epsilonscan.to/*"
      ],
      "js": [
        "jszip.js",
        "jspdf.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}